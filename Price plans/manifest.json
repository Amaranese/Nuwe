              {
                "name": "titleColor",
                "label": "Title Background",
                "type": "color",
                "default": "#F8F8F8"
              },
              {
                "name": "backgroundColor",
                "label": "Content Background",
                "type": "color",
                "default": "#FFFFFF"
              },
              {
                "name": "numberColor",
                "label": "Number",
                "type": "color",
                "default": "#222222"
